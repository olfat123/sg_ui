// change password modal starts
#change-password-modal.modal.fade(tabindex="-1" aria-labelledby="change-password-modal-label" aria-hidden="true")
	.modal-dialog.modal-dialog-centered
		.modal-content
			.modal-header.flex-column.text-center
				button.btn.btn-link.text-uppercase.rounded-xl.p-2.icon-link.icon-link-hover.icon-link-hover-rotate.text-reset.text-primary-hover.text-primary-focus.text-decoration-none.ms-auto(type="button" data-bs-dismiss="modal" aria-label="Close")
					svg.bi.w-24px.h-24px(width="24px" height="24px" fill="currentColor")
						use(href="#icon-close")
					span.visually-hidden close
				h5#change-password-modal-label.modal-title.h2.lh-1.text-capitalize
					strong.fw-bolder change password
			.modal-body
				include ../forms/_change-password.pug
// change password modal ends
