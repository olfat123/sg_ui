include ./_app-nav-list.pug

mixin app-nav(data={type: "", list: []}, label = "", allowSkipToContent=false)
	// navigation list starts
	nav(class=`app-nav${data.type ? ` app-nav-${data.type}` : ""} w-100`, aria-label=label ? label : undefined)
		if (data.list && data.list.length)
			+app-nav-list({ list: data.list, type: data.type}, allowSkipToContent)
	// navigation list ends
